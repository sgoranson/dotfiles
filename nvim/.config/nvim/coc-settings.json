{


    "coc.preferences.colorSupport": true,
    "coc.preferences.enableFloatHighlight": false,
    
    "coc.preferences.formatOnType": true,
    "coc.preferences.hoverTarget":"float",

    "codeLens.enable": true,
    "diagnostic.enable": true,
    "diagnostic.messageTarget": "float",
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextPrefix": "VT",

    "list.maxPreviewHeight": 100,
    "list.maxHeight": 30,


    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,

    "python.jediEnabled": false,
    "python.linting.enabled": true,

    "signature.target":"float",
   "signature.enable": true, 
    "signature.maxWindowHeight": 100,

    "snippets.autoTrigger": true,

    "suggest.autoTrigger": "always",
    "suggest.echodocSupport": true,
    "suggest.enablePreview": true,
    "suggest.maxPreviewWidth": 100,
    "suggest.minTriggerInputLength": 1,
    "suggest.snippetIndicator": "[snippet]",
    "suggest.triggerAfterInsertEnter": true,
    "suggest.reloadPumOnInsertChar": false,
   

    // make vim select first item on completion
    "suggest.noselect": true,
    // when snippet activated and pumvisible, prefer complete completion.
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "suggest.languageSourcePriority": 99,
    "coc.source.around.priority": 1,
    "coc.source.emoji.filetypes": null,
     
    
    


    // Snippets
    //"snippets.ultisnips.directories": ["/home/steve/.config/nvim/snippets"],
    "languageserver": {
        "efm": {
            "command": "efm-langserver",
            // custom config path
            "args": ["-c", "/home/steve/.config/efm-langserver/config.yaml"],
            "filetypes": ["vim", "eruby", "markdown"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh", "bash"],
            "ignoredRootPaths": ["~"]
        }
    }
}

