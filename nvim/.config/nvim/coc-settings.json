{
    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "suggest.maxPreviewWidth": 100,
    "suggest.echodocSupport": true,
    "codeLens.enable": false,
    "signature.target": "echo",
    "diagnostic.virtualTextPrefix": "VT",
    "diagnostic.messageTarget": "echo",
    "coc.preferences.colorSupport": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.hoverTarget": "preview",
    "coc.preferences.enableFloatHighlight": true,
    // make vim select first item on completion
    "suggest.noselect": true,
    // when snippet activated and pumvisible, prefer complete completion.
    "suggest.preferCompleteThanJumpPlaceholder": true,

    "suggest.triggerAfterInsertEnter": true,
    "suggest.autoTrigger": "always",
    "diagnostic.enable": true,
    "diagnostic.virtualText": true,
    "suggest.enablePreview": true,
    "suggest.snippetIndicator": "~",
    "snippets.autoTrigger": true,
    "list.maxPreviewHeight": 30,
    // Snippets
    //"snippets.ultisnips.directories": ["/home/steve/.config/nvim/snippets"],
    "languageserver": {
        "efm": {
            "command": "efm-langserver",
            // custom config path
            "args": ["-c", "/home/steve/.config/efm-langserver/config.yaml"],
            "filetypes": ["vim", "eruby", "markdown"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh", "bash"],
            "ignoredRootPaths": ["~"]
        }
    }
}
