!URxvt.loginShell:          true
URxvt.termName:            xterm-256color
!URxvt.letterSpace:         -1
!!URxvt.font:                xft:MesloLGM Nerd Font:style=RegularForPowerline:size=11
URxvt.font:                xft:Consolas for Powerline:style=Regular:size=11
