;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
; label-connected = %upspeed:9%%downspeed:9%
label-connected =  "%{T4}ÔÉ®%{T5} %local_ip:0:15:...%  %{T1}ÔÇ™%{T5} %downspeed:9%  %{T-} %{T1}ÔÇ´%{T-} %{T5} %upspeed:9% %{T-}"
